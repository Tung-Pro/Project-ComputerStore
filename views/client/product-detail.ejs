<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" sizes="16x16" href="/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* CSS trang chi tiết sản phẩm */
        .product-image {
            height: 400px;
            object-fit: contain;
            background-color: #f8f9fa;
        }
        .thumbnail {
            width: 80px;
            height: 80px;
            object-fit: cover;
            cursor: pointer;
            border: 1px solid #ddd;
            margin-right: 10px;
        }
        .thumbnail.active {
            border: 2px solid #0d6efd;
        }
        .specs-table td {
            padding: 8px;
        }
        .specs-table tr:nth-child(even) {
            background-color: #f8f9fa;
        }
        /* Css cho đánh giá */
        .rating-stars {
            color: #ffc107;
            font-size: 1.2rem;
        }
        .review-card {
            border-bottom: 1px solid #dee2e6;
            padding: 15px 0;
        }
        .review-date {
            font-size: 0.8rem;
            color: #6c757d;
        }
        .user-review-form .rating-input {
            display: none;
        }
        .user-review-form .rating-star {
            cursor: pointer;
            font-size: 1.5rem;
            padding: 0 2px;
        }
        .user-review-form .rating-star:hover, 
        .user-review-form .rating-star.active {
            color: #ffc107;
        }
        /* CSS cho mô tả rút gọn */
        .description-preview {
            max-height: 200px;
            overflow: hidden;
            position: relative;
        }
        
        .description-preview::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: linear-gradient(transparent, white);
            pointer-events: none;
        }
        .short-description {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast align-items-center border-0 bg-white" role="alert" aria-live="assertive" aria-atomic="true" id="cart-toast">
            <div class="d-flex">
                <div class="toast-body">
                    <div class="text-success fw-bold mb-1">Thành công</div>
                    <div id="toastMessage"></div>
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <!-- Kiểm tra xem user đã đăng nhập hay chưa -->
    <input type="hidden" id="isUserLoggedIn" value="<%= user ? 'true' : 'false' %>">
    <!-- Modal yêu cầu đăng nhập -->
    <div class="modal fade" id="loginRequiredModal" tabindex="-1" aria-labelledby="loginRequiredModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-4">
                <button type="button" class="btn-close position-absolute end-0 top-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="d-flex justify-content-center mb-3">
                    <img src="/mascot.png" alt="login" class="img-fluid" style="max-width: 250px;">
                </div>
                <p class="mb-4">Vui lòng đăng nhập tài khoản ThinkPro để xem ưu đãi và thanh toán dễ dàng hơn.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/auth/register" class="btn btn-outline-primary w-50">Đăng ký</a>
                    <a href="/auth/login" class="btn btn-primary w-50">Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4 mb-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/category/<%= product.category.slug %>" class="text-decoration-none text-dark"><%= product.category.name %></a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
            </ol>
        </nav>

        <div class="row mt-4">
            <!-- Hình ảnh sản phẩm -->
            <div class="col-lg-6 mb-4">
                <div class="mb-3 text-center">
                    <img src="<%= product.mainImage %>" id="main-product-image" class="img-fluid product-image rounded mx-auto d-block" alt="<%= product.name %>">
                </div>
                <div class="d-flex flex-wrap justify-content-center">
                    <img src="<%= product.mainImage %>" class="thumbnail active" onclick="changeImage(this, '<%= product.mainImage %>')">
                    <% if (product.images && product.images.length > 0) { %>
                        <% product.images.forEach(image => { %>
                            <img src="<%= image %>" class="thumbnail" onclick="changeImage(this, '<%= image %>')">
                        <% }) %>
                    <% } %>
                </div>
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-lg-6">
                <h2 class="fw-bold mb-3"><%= product.name %></h2>
                <p class="text-muted mb-3">Danh mục: <a href="/products?category=<%= product.category._id %>" class="text-decoration-none text-dark"><%= product.category.name %></a></p>
                
                <!-- Đánh giá trung bình -->
                <div class="mb-3">
                    <span class="rating-stars">
                        <% for(let i = 1; i <= 5; i++) { %>
                            <% if(i <= Math.floor(averageRating)) { %>
                                <i class="fas fa-star"></i>
                            <% } else if(i - 0.5 <= averageRating) { %>
                                <i class="fas fa-star-half-alt"></i>
                            <% } else { %>
                                <i class="far fa-star"></i>
                            <% } %>
                        <% } %>
                    </span>
                    <span class="ms-2"><%= averageRating %>/5</span>
                    <span class="ms-2">(<%= reviews.length %> đánh giá)</span>
                </div>
                
                <!-- Giá sản phẩm -->
                <div class="mb-4">
                    <% if (product.discountPrice > 0) { %>
                        <h3 class="text-danger fw-bold"><%= product.discountPrice.toLocaleString('vi-VN') %>₫</h3>
                        <div class="d-flex align-items-center">
                            <p class="text-decoration-line-through fs-5 mb-0 me-2"><%= product.price.toLocaleString('vi-VN') %>₫</p>
                            <span class="badge bg-danger">Giảm <%= Math.round((1 - product.discountPrice/product.price) * 100) %>%</span>
                        </div>

                    <% } else { %>
                        <h3 class="fw-bold"><%= product.price.toLocaleString('vi-VN') %>₫</h3>
                    <% } %>

                </div>

                <!-- Tình trạng sản phẩm -->
                <div class="mb-4">
                    <p>Tình trạng: 
                        <% if (product.quantity > 0) { %>
                            <span class="text-success fw-bold" title="<%= product.quantity %> sản phẩm còn lại" style="cursor: pointer;">Còn hàng</span>
                        <% } else { %>
                            <span class="text-danger fw-bold">Hết hàng</span>
                        <% } %>
                    </p>
                </div>

                <!-- Số lượng và nút mua hàng -->
                <div class="mb-4">
                    <div class="input-group mb-3" style="max-width: 200px;">
                        <button class="btn btn-outline-secondary" type="button" id="decrease-quantity">-</button>
                        <input type="number" class="form-control text-center" id="product-quantity" value="1" min="1" max="<%= product.quantity %>" readonly>
                        <button class="btn btn-outline-secondary" type="button" id="increase-quantity">+</button>
                    </div>

                    <div class="d-grid gap-2 d-md-flex">
                        <% if (product.quantity > 0) { %>
                            <button class="btn btn-primary" onclick="addToCart('<%= product._id %>')">
                                <i class="fas fa-shopping-cart me-2"></i> Thêm vào giỏ
                            </button>
                            <button class="btn btn-danger" onclick="buyNow('<%= product._id %>')">
                                <i class="fas fa-bolt me-2"></i> Mua ngay
                            </button>
                        <% } else { %>
                            <button class="btn btn-secondary" disabled>Hết hàng</button>
                            <button class="btn btn-outline-primary">Thông báo khi có hàng</button>
                        <% } %>
                    </div>
                </div>

                <!-- Mô tả ngắn -->
                <div class="mb-4">
                    <h5>Mô tả tóm tắt:</h5>
                    <% if (product.shortDescription && product.shortDescription.length > 0) { %>
                        <div class="short-description"><%- product.shortDescription %></div>
                        <div class="text-center mt-3">
                            <a href="#" class="btn btn-light border rounded-5 px-3 py-1" data-bs-toggle="modal" data-bs-target="#descriptionModal">
                                Xem chi tiết <i class="fas fa-chevron-right ms-2"></i>
                            </a>
                        </div>
                        
                        <!-- Modal Mô tả sản phẩm -->
                        <div class="modal fade" id="descriptionModal" tabindex="-1" aria-labelledby="descriptionModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="descriptionModalLabel">Mô tả tóm tắt: <%= product.name %></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div><%- product.shortDescription %></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <p>Chưa có mô tả cho sản phẩm này.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Tab thông tin chi tiết -->
        <div class="row mt-5">
            <div class="col-12">
                <ul class="nav nav-tabs" id="productTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab">Mô tả chi tiết</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="specifications-tab" data-bs-toggle="tab" data-bs-target="#specifications" type="button" role="tab">Thông số kỹ thuật</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab">Đánh giá (<%= reviews.length %>)</button>
                    </li>
                </ul>

                <div class="tab-content p-4 border border-top-0 rounded-bottom" id="productTabContent">
                    <!-- Mô tả chi tiết -->
                    <div class="tab-pane fade show active" id="description" role="tabpanel">
                        <div class="product-description">
                            <% if (product.shortDescription || (product.description && product.description.length > 0)) { %>
                                <div class="card border-0">
                                    <div class="card-body">
                                        <% if (product.description && product.description.length > 0) { %>
                                            <!-- Button xem chi tiết kiểu 1 (cũ *viền xanh nền trắng*)
                                             <div class="description-preview mb-4"><%- product.description %></div>
                                            <div class="text-center">
                                                <button class="btn btn-outline-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#fullDescriptionModal">
                                                    Xem chi tiết<i class="fas fa-chevron-right ms-2"></i>
                                                </button>
                                            </div> -->
                                            <div class="description-preview mb-4"><%- product.description %></div>
                                            <div class="d-flex justify-content-center">
                                                <a href="#" class="btn btn-light border rounded-5 px-3 py-1" data-bs-toggle="modal" data-bs-target="#fullDescriptionModal">
                                                    Xem chi tiết <i class="fas fa-chevron-right ms-2"></i>
                                                </a>
                                            </div>
                                            
                                            <!-- Modal mô tả đầy đủ trong tab -->
                                            <div class="modal fade" id="fullDescriptionModal" tabindex="-1" aria-labelledby="fullDescriptionModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="fullDescriptionModalLabel">Mô tả chi tiết: <%= product.name %></h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div><%- product.description %></div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div><%- product.description %></div>
                                        <% } %>
                                    </div>
                                </div>
                            <% } else { %>
                                <p>Chưa có mô tả chi tiết cho sản phẩm này.</p>
                            <% } %>
                        </div>
                    </div>

                    <!-- Thông số kỹ thuật -->
                    <div class="tab-pane fade" id="specifications" role="tabpanel">
                        <% if (product.specifications && Object.keys(product.specifications).length > 0) { %>
                            <table class="table specs-table">
                                <tbody>
                                    <% for (const [key, value] of Object.entries(product.specifications)) { %>
                                        <tr>
                                            <td class="fw-bold" style="width: 30%"><%= key %></td>
                                            <td><%= value %></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <p>Chưa có thông số kỹ thuật cho sản phẩm này.</p>
                        <% } %>
                    </div>

                    <!-- Đánh giá -->
                    <div class="tab-pane fade" id="reviews" role="tabpanel">
                        <div class="row">
                            <div class="col-lg-8">
                                <h4 class="mb-4">Đánh giá từ khách hàng</h4>
                                
                                <!-- Form đánh giá -->
                                <% if(user) { %>
                                    <div class="card mb-4 user-review-form">
                                        <div class="card-body">
                                            <h5 class="mb-3">Viết đánh giá của bạn</h5>
                                            
                                            <% if(userReviews && userReviews.length > 0) { %>
                                                <div class="alert alert-info mb-3">
                                                    <i class="fas fa-info-circle me-2"></i>
                                                    Bạn có thể xem và chỉnh sửa đánh giá của mình trong <a href="/account/reviews" class="alert-link">trang quản lý đánh giá</a>.
                                                </div>
                                            <% } %>
                                            
                                            <form id="review-form">
                                                <input type="hidden" id="product-id" value="<%= product._id %>">
                                                
                                                <div class="mb-3">
                                                    <label class="form-label">Đánh giá của bạn:</label>
                                                    <div class="rating-container d-flex align-items-center mb-2">
                                                        <div class="stars me-2">
                                                            <% for(let i = 1; i <= 5; i++) { %>
                                                                <span class="rating-star" data-rating="<%= i %>">
                                                                    <i class="far fa-star"></i>
                                                                </span>
                                                            <% } %>
                                                        </div>
                                                        <small class="text-muted rating-text">Chọn số sao</small>
                                                        <input type="hidden" id="rating-value" name="rating" value="0">
                                                    </div>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <label for="review-comment" class="form-label">Nhận xét của bạn:</label>
                                                    <textarea class="form-control" id="review-comment" rows="3" 
                                                              placeholder="Chia sẻ trải nghiệm của bạn về sản phẩm này..." 
                                                              required minlength="10"></textarea>
                                                    <small class="text-muted">Tối thiểu 10 ký tự</small>
                                                </div>
                                                
                                                <button type="submit" class="btn btn-primary" id="submit-review">
                                                    <i class="fas fa-paper-plane me-2"></i>Gửi đánh giá
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="alert alert-info mb-4">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Vui lòng <a href="/auth/login" class="alert-link">đăng nhập</a> để tham gia đánh giá.
                                    </div>
                                <% } %>
                                
                                <!-- Danh sách đánh giá -->
                                <div class="reviews-list">
                                    <% if(reviews.length > 0) { %>
                                        <% reviews.forEach(review => { %>
                                            <div class="review-card">
                                                <div class="d-flex align-items-center mb-2">
                                                    <div class="review-avatar me-3">
                                                        <i class="fas fa-user-circle fa-2x text-secondary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0"><%= review.user.name %></h6>
                                                        <small class="text-muted">
                                                            <%= new Date(review.createdAt).toLocaleDateString('vi-VN', { 
                                                                year: 'numeric', 
                                                                month: 'long', 
                                                                day: 'numeric' 
                                                            }) %>
                                                        </small>
                                                    </div>
                                                    <div class="rating-stars ms-auto">
                                                        <% for(let i = 1; i <= 5; i++) { %>
                                                            <i class="<%= i <= review.rating ? 'fas' : 'far' %> fa-star"></i>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <p class="review-comment mb-0"><%= review.comment %></p>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <div class="text-center py-5">
                                            <i class="far fa-comment-dots fa-3x text-muted mb-3"></i>
                                            <p class="text-muted">Chưa có đánh giá nào cho sản phẩm này.</p>
                                            <% if(user) { %>
                                                <p class="mb-0">Hãy là người đầu tiên đánh giá!</p>
                                            <% } %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="col-lg-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="mb-4">Thống kê đánh giá</h5>
                                        <div class="d-flex align-items-center mb-4">
                                            <span class="display-4 me-3"><%= averageRating %></span>
                                            <div>
                                                <div class="rating-stars">
                                                    <% for(let i = 1; i <= 5; i++) { %>
                                                        <% if(i <= Math.floor(averageRating)) { %>
                                                            <i class="fas fa-star"></i>
                                                        <% } else if(i - 0.5 <= averageRating) { %>
                                                            <i class="fas fa-star-half-alt"></i>
                                                        <% } else { %>
                                                            <i class="far fa-star"></i>
                                                        <% } %>
                                                    <% } %>
                                                </div>
                                                <span><%= reviews.length %> đánh giá</span>
                                            </div>
                                        </div>

                                        <!-- Chi tiết thống kê theo số sao -->
                                        <div class="rating-breakdown">
                                            <% for(let i = 5; i >= 1; i--) { %>
                                                <div class="rating-bar mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <div class="rating-label me-2 fw-bold d-flex align-items-center" style="min-width: 30px;">
                                                            <span><%= i %></span>
                                                            <i class="fas fa-star text-warning ms-1"></i>
                                                        </div>
                                                        <div class="progress flex-grow-1 mx-2" style="height: 8px;">
                                                            <div class="progress-bar bg-warning"
                                                                role="progressbar"
                                                                style="width: <%= ratingPercentages[i] %>%;"
                                                                aria-valuenow="<%= ratingPercentages[i] %>"
                                                                aria-valuemin="0"
                                                                aria-valuemax="100"
                                                                data-bs-toggle="tooltip"
                                                                data-bs-placement="top"
                                                                title="<%= ratingPercentages[i] %>%">
                                                            </div>
                                                        </div>
                                                        <div class="rating-count ms-2 text-muted" style="min-width: 60px;">
                                                            (<%= ratingStats[i] %> đánh giá)
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sản phẩm liên quan -->
        <% if (relatedProducts && relatedProducts.length > 0) { %>
            <section class="mt-5">
                <h3 class="mb-4">Sản phẩm liên quan</h3>
                <div class="row">
                    <% relatedProducts.forEach(product => { %>
                        <div class="col-md-3 mb-4">
                            <div class="card h-100 product-card">
                                <div class="card-img-container">
                                    <% if (product.discountPrice > 0) { %>
                                        <% const discountPercent = Math.round((product.price - product.discountPrice) / product.price * 100) %>
                                        <div class="discount-badge">-<%= discountPercent %>%</div>
                                    <% } %>
                                    <img src="<%= product.mainImage %>" class="card-img-top" alt="<%= product.name %>">
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title"><%= product.name %></h5>
                                    <p class="card-text text-muted mb-2"><%= product.category.name %></p>
                                    <div class="mt-auto">
                                        <% if (product.discountPrice > 0) { %>
                                            <p class="card-text mb-2">
                                                <span class="text-danger fw-bold"><%= product.discountPrice.toLocaleString('vi-VN') %>₫</span>
                                                <span class="text-decoration-line-through ms-2"><%= product.price.toLocaleString('vi-VN') %>₫</span>
                                            </p>
                                        <% } else { %>
                                            <p class="card-text fw-bold mb-2"><%= product.price.toLocaleString('vi-VN') %>₫</p>
                                        <% } %>
                                        <a href="/products/<%= product.slug %>" class="btn btn-primary w-100">Xem chi tiết</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </section>
        <% } %>
    </div>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Hàm thay đổi hình ảnh chính
        function changeImage(element, imageSrc) {
            document.getElementById('main-product-image').src = imageSrc;
            
            // Xóa class active từ tất cả thumbnails
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            
            // Thêm class active cho thumbnail được chọn
            element.classList.add('active');
        }

        // Xử lý tăng/giảm số lượng
        document.getElementById('increase-quantity').addEventListener('click', function() {
            const quantityInput = document.getElementById('product-quantity');
            const currentValue = parseInt(quantityInput.value);
            const maxValue = parseInt(quantityInput.max);
            
            if (currentValue < maxValue) {
                quantityInput.value = currentValue + 1;
            }
        });

        document.getElementById('decrease-quantity').addEventListener('click', function() {
            const quantityInput = document.getElementById('product-quantity');
            const currentValue = parseInt(quantityInput.value);
            
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
            }
        });

        // Hàm thêm vào giỏ hàng
        function addToCart(productId) {
            // Kiểm tra xem user đã đăng nhập hay chưa
            const isLoggedIn = document.getElementById('isUserLoggedIn').value === 'true';
            if (!isLoggedIn) {
                const loginModal = new bootstrap.Modal(document.getElementById('loginRequiredModal'));
                loginModal.show();
                return;
            }

            const quantity = parseInt(document.getElementById('product-quantity').value);
            
            fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                    productId, 
                    quantity 
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Hiển thị toast thông báo
                    document.getElementById('toastMessage').textContent = data.message;
                    const toastElement = document.getElementById('cart-toast');
                    const toast = new bootstrap.Toast(toastElement, {
                        delay: 3000
                    });
                    toast.show();
                    
                    // Cập nhật số lượng/giá trị giỏ hàng ở header
                    const cartBadge = document.querySelector('.badge');
                    if (cartBadge) {
                        cartBadge.textContent = data.cartItemCount;
                        cartBadge.classList.remove('d-none');
                    }

                    if (document.querySelector('.cart-total')) {
                        document.querySelector('.cart-total').textContent = data.totalPrice.toLocaleString('vi-VN') + 'đ';
                    }

                } else {
                    alert(data.message || 'Có lỗi xảy ra khi thêm vào giỏ hàng');
                }
            })
            .catch(error => {
                console.error('Lỗi:', error);
                alert('Đã xảy ra lỗi khi thêm vào giỏ hàng');
            });
        }

        // Hàm mua ngay
        function buyNow(productId) {
            // Kiểm tra xem user đã đăng nhập hay chưa
            const isLoggedIn = document.getElementById('isUserLoggedIn').value === 'true';
            if (!isLoggedIn) {
                const loginModal = new bootstrap.Modal(document.getElementById('loginRequiredModal'));
                loginModal.show();
                return;
            }

            const quantity = parseInt(document.getElementById('product-quantity').value);
            
            fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                    productId, 
                    quantity,
                    buyNow: true 
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Chuyển hướng đến trang giỏ hàng
                    window.location.href = '/cart';
                } else {
                    alert(data.message || 'Có lỗi xảy ra khi thêm vào giỏ hàng');
                }
            })
            .catch(error => {
                console.error('Lỗi:', error);
                alert('Đã xảy ra lỗi khi mua ngay');
            });
        }

        // Xử lý đánh giá sao
        document.querySelectorAll('.rating-star').forEach(star => {
            star.addEventListener('click', function() {
                const rating = parseInt(this.getAttribute('data-rating'));
                document.getElementById('rating-value').value = rating;
                updateStarRating(rating);
            });
        });

        // Hàm cập nhật hiển thị sao
        function updateStarRating(rating) {
            document.querySelectorAll('.rating-star').forEach(star => {
                const starRating = parseInt(star.getAttribute('data-rating'));
                if (starRating <= rating) {
                    star.classList.add('active');
                    star.querySelector('i').className = 'fas fa-star text-warning';
                } else {
                    star.classList.remove('active');
                    star.querySelector('i').className = 'far fa-star text-warning';
                }
            });
        }

        // Xử lý gửi đánh giá
        document.getElementById('review-form')?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const productId = document.getElementById('product-id').value;
            const rating = document.getElementById('rating-value').value;
            const comment = document.getElementById('review-comment').value;
            
            if (rating < 1) {
                alert('Vui lòng chọn số sao đánh giá');
                return;
            }
            
            if (comment.trim().length < 10) {
                alert('Nhận xét phải có ít nhất 10 ký tự');
                return;
            }
            
            try {
                const response = await fetch('/products/review', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId,
                        rating: parseInt(rating),
                        comment: comment.trim()
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert(data.message);
                    // Reset form
                    document.getElementById('rating-value').value = '0';
                    document.getElementById('review-comment').value = '';
                    updateStarRating(0);
                    // Tải lại trang để hiển thị đánh giá mới
                    location.reload();
                } else {
                    alert(data.message || 'Đã xảy ra lỗi khi gửi đánh giá');
                }
            } catch (error) {
                console.error('Lỗi khi gửi đánh giá:', error);
                alert('Đã xảy ra lỗi khi gửi đánh giá. Vui lòng thử lại sau.');
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
</body>
