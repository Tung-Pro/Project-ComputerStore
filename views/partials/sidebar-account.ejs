<!-- Greeting Section -->
<div class="d-flex align-items-center mb-4">
    <div style="width: 64px; min-width: 64px;">
        <img src="" alt="Daytime icon" id="daytimeIcon" class="w-100 h-100">
    </div>
    <div class="ms-3">
        <h3 class="mb-0 fw-bold fs-3" id="greetingText"></h3>
        <h3 class="mb-0 fw-bold fs-3"><%= user.name %></h3>
    </div>
</div>
<!-- Sidebar -->
<div class="col-md-3 mb-4">
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link <%= activeMenu === 'info' ? 'active' : '' %>" href="/account">
                    <i class="fas fa-user"></i> Thông tin tài khoản
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= activeMenu === 'orders' ? 'active' : '' %>" href="/account/orders">
                    <i class="fas fa-shopping-bag"></i> Lịch sử đơn hàng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <%= activeMenu === 'reviews' ? 'active' : '' %>" href="/account/reviews">
                    <i class="fas fa-star"></i> Đánh giá của tôi
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/auth/logout">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </a>
            </li>
        </ul>
    </div>
</div>
<script>
    // Xử lý chào theo thời gian
    document.addEventListener('DOMContentLoaded', function() {
        function updateGreeting() {
            const hour = new Date().getHours();
            let greeting, iconPath;
            if (hour >= 5 && hour < 11) {
                greeting = "Chào buổi sáng,";
                iconPath = "/images/daytime/morning.jpg";
            } else if (hour >= 11 && hour < 13) {
                greeting = "Chào buổi trưa,";
                iconPath = "/images/daytime/midday.jpg";
            } else if (hour >= 13 && hour < 18) {
                greeting = "Chào buổi chiều,";
                iconPath = "/images/daytime/afternoon.jpg";
            } else {
                greeting = "Chào buổi tối,";
                iconPath = "/images/daytime/evening.jpg";
            }
            document.getElementById('greetingText').textContent = greeting;
            document.getElementById('daytimeIcon').src = iconPath;
        }
        updateGreeting();
        setInterval(updateGreeting, 60000);
    });
</script><style>
